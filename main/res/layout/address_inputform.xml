<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_address_inputform"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/edittext_shape">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="どこの住所?"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="10">


        <EditText
            android:id="@+id/postaddress1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ー"/>


        <EditText
            android:id="@+id/postaddress2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:inputType="numberDecimal"/>



        <EditText
            android:id="@+id/et_month_output"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:inputType="textMultiLine"/>



<!--        <ImageButton-->
<!--            android:id="@+id/bt_date_select"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:src="@drawable/baseline_date_range_black_24"-->
<!--            android:scaleType="centerInside"-->
<!--            android:background="@null"-->
<!--            android:layout_marginRight="24dp"-->
<!--            android:onClick="showDatePickerDialog"/>-->

        <ImageButton
            android:id="@+id/bt_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:adjustViewBounds="true"
            android:src="@drawable/baseline_delete_forever_black_241"
            android:scaleType="centerInside"
            android:background="@null"/>

    </LinearLayout>
</LinearLayout>